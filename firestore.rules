rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función helper para verificar autenticación
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Función para verificar si el usuario es el propietario
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // ============================================
    // COLECCIÓN DE INVENTARIO (VEHÍCULOS)
    // ============================================
    match /inventory/{vehicleId} {
      // Lectura pública: cualquiera puede ver vehículos publicados
      allow read: if resource.data.isPublished == true;
      
      // Lectura para admin: usuarios autenticados pueden ver todos los vehículos
      allow read: if isSignedIn();
      
      // Escritura: solo usuarios autenticados
      allow create, update, delete: if isSignedIn();
    }
    
    // ============================================
    // COLECCIÓN DE CONFIGURACIÓN
    // ============================================
    match /settings/{document} {
      // Lectura pública: todos pueden ver la configuración (necesario para el Hero)
      allow read: if true;
      
      // Escritura: solo usuarios autenticados
      allow write: if isSignedIn();
    }
    
    // ============================================
    // COLECCIÓN DE LEADS (FORMULARIOS DE CONTACTO)
    // ============================================
    match /leads/{leadId} {
      // Crear: cualquiera puede enviar un formulario de contacto
      allow create: if true;
      
      // Lectura y actualización: solo usuarios autenticados
      allow read, update, delete: if isSignedIn();
    }
    
    // ============================================
    // COLECCIÓN DE CLIENTES
    // ============================================
    match /clients/{clientId} {
      // Solo usuarios autenticados pueden leer
      allow read: if isSignedIn();
      
      // Solo usuarios autenticados pueden crear
      allow create: if isSignedIn();
      
      // Solo usuarios autenticados pueden actualizar y eliminar
      allow update, delete: if isSignedIn();
    }
    
    // ============================================
    // COLECCIÓN DE PAGOS
    // ============================================
    match /payments/{paymentId} {
      // Solo usuarios autenticados pueden leer
      allow read: if isSignedIn();
      
      // Solo usuarios autenticados pueden crear
      // Y el createdBy debe coincidir con el uid del usuario
      allow create: if isSignedIn() && 
                      request.resource.data.createdBy == request.auth.uid;
      
      // Solo usuarios autenticados pueden actualizar y eliminar
      allow update, delete: if isSignedIn();
    }
    
    // ============================================
    // COLECCIÓN DE SCHEDULED_PAYMENTS
    // ============================================
    match /scheduled_payments/{paymentId} {
      // Solo usuarios autenticados pueden acceder
      allow read, write: if isSignedIn();
    }
    
    // ============================================
    // COLECCIÓN DE CONTRACTS (CONTRATOS)
    // ============================================
    match /contracts/{contractId} {
      // Solo usuarios autenticados pueden acceder
      allow read, write: if isSignedIn();
    }
    
    // ============================================
    // BLOQUEAR CUALQUIER OTRA COLECCIÓN NO ESPECIFICADA
    // ============================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}